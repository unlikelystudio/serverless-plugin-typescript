{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"rootDir": "./",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020"]
	},
	"include": ["src/**/*.ts", "__tests__/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
